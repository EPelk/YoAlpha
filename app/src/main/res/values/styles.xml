<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorTopBarLight</item>
        <item name="colorAccent">@color/colorTextLight</item>
        <item name="android:windowBackground">@color/colorBackgroundLight</item>
    </style>
    <style name="AppTheme.Dark" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorR</item>
        <item name="colorPrimaryDark">@color/colorG</item>
        <item name="colorAccent">@color/colorB</item>
        <item name="android:windowBackground">@color/colorBackgroundDark</item>
    </style>

    <style name="AppTheme.Dark.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.Dark.PopupOverlay" parent="ThemeOverlay.AppCompat" />
</resources>